<launch>
  <!-- Запуск Gazebo с миром -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find my_robot)/worlds/world.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
  </include>

  <!-- Загрузка URDF робота -->
  <param name="robot_description" textfile="$(find my_robot)/urdf/simple_robot.urdf" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <!-- Спавн робота в Gazebo -->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model my_robot -x 1 -y 1 -z 0.1 -param robot_description" />

  <!-- Запуск RViz для визуализации -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find my_robot)/rviz/robot.rviz" />
</launch>