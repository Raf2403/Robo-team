<?xml version="1.0"?>
<robot name="differential_drive_robot">

    <!-- World link (fixed base) -->
    <link name="world"/>

    <!-- Base link to world connection -->
    <joint name="base_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="world"/>
        <child link="body_link"/>
    </joint>

    <!-- Robot body -->
    <link name="body_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.15"/>
            <geometry>
                <box size="1.0 0.6 0.3"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.15"/>
            <geometry>
                <box size="1.0 0.6 0.3"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.15"/>
            <mass value="10"/>
            <inertia ixx="0.4" ixy="0" ixz="0" iyy="0.4" iyz="0" izz="0.2"/>
        </inertial>
    </link>

    <!-- Back right wheel joint -->
    <joint name="wheel1_joint" type="continuous">
        <origin xyz="-0.3 -0.35 0" rpy="0 0 0"/>
        <parent link="body_link"/>
        <child link="wheel1_link"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Back right wheel link -->
    <link name="wheel1_link">
        <visual>
            <origin rpy="1.570795 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.1" radius="0.15"/>
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
        <collision>
            <origin rpy="1.570795 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.1" radius="0.15"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02"/>
        </inertial>
    </link>
    

</robot>
