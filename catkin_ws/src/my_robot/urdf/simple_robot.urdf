<?xml version="1.0"?>
<robot name="simple_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Базовое звено -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.3 0.3 0.1"/></geometry>
      <origin xyz="0 0 0.05"/>
      <material name="blue"><color rgba="0 0 0.8 1"/></material>
    </visual>
    <collision><geometry><box size="1 1 1"/></geometry></collision>
    <inertial>
      <mass value="5"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Первое сочленение (поворотное) -->
  <link name="link1">
    <visual>
      <geometry><cylinder radius="0.1" length="0.3"/></geometry>
      <material name="red"><color rgba="0.8 0 0 1"/></material>
    </visual>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0.2 0 0.1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <!-- Второе сочленение (призматическое) -->
  <link name="link2">
    <visual>
      <geometry><box size="0.2 0.1 0.1"/></geometry>
      <material name="green"><color rgba="0 0.8 0 1"/></material>
    </visual>
  </link>

  <joint name="joint2" type="prismatic">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.15 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.1" upper="0.1" effort="10" velocity="0.5"/>
  </joint>
</robot>
