<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="wheel_module">

  <!-- Макрос для одного колеса -->
  <xacro:macro name="wheel_module" params="wheel_name parent_link xyz rpy">
    <joint name="${wheel_name}_joint" type="continuous">
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <parent link="${parent_link}"/>
      <child link="${wheel_name}_link"/>
      <axis xyz="0 1 0"/>
    </joint>

    <link name="${wheel_name}_link">
      <visual>
        <origin rpy="1.5708 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.1" radius="0.15"/>
        </geometry>
        <material name="yellow">
          <color rgba="1 1 0 1"/>
        </material>
      </visual>
      <collision>
        <origin rpy="1.5708 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.1" radius="0.15"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0"/>
        <mass value="1"/>
        <inertia ixx="0.00646" ixy="0" ixz="0" iyy="0.01125" iyz="0" izz="0.00646"/> 
      </inertial>
    </link>
  </xacro:macro>
</robot>

