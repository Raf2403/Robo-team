<launch>
  <!-- Загрузка модели робота -->
  <param name="robot_description" 
         command="$(find xacro)/xacro $(find mastering_ros_robot_description_pkg)/urdf/dif_r.xacro"/>

  <!-- Публикация состояний суставов -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>

  <!-- Публикация TF-преобразований -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Запуск Rviz с конфигурацией -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mastering_ros_robot_description_pkg)/urdf.rviz" required="true"/>
</launch>
