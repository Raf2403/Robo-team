<?xml version="1.0"?>
<launch>

  <!-- Запуск Gazebo с пустым миром -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find my_robot)/worlds/world.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
  </include>

  <!-- Генерация URDF через xacro -->
  <param name="robot_description" command="xacro $(find mastering_ros_robot_description_pkg)/urdf/dif_r.xacro"/>

  <!-- Публикация состояний суставов -->
  <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher"/>

  <!-- Публикация TF-преобразований -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" value="50.0"/>
  </node>

  <!-- Спавн модели в Gazebo -->
  <node name="spawn_dif_r" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-param robot_description -urdf -model dif_r -x 0 -y 1 -z 0.1"/>

</launch>

